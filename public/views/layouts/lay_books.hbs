  <script>
    document.getElementById('compartirBoton').addEventListener('click', async () => {
        try {
            if (navigator.share) {
                // Utiliza la Web Share API si está disponible
                await navigator.share({
                    title: 'Título del recurso compartido',
                    text: 'Descripción del recurso compartido',
                    url: 'https://tuurl.com'
                });
            } else {
                // Si la Web Share API no está disponible, proporciona una alternativa o mensaje
                alert('La función de compartir no está disponible en este navegador.');
            }
        } catch (error) {
            console.error('Error al intentar compartir:', error);
        }
    });
